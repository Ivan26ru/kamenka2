 <krpano>
 
	<include url="%FIRSTXML%/plugins/showtext.xml" />
	<include url="%FIRSTXML%/plugins/combobox.xml" />
	
 
	<!-- Стиль КНОПКА -->         		   

	
	
	<!-- Стиль точки вида -->
